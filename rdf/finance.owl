@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ex: <http://example.org/finance#> .

@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix ex: <http://example.org/finance#> .
@prefix dbo: <http://dbpedia.org/ontology/> .
@prefix wd: <http://www.wikidata.org/entity/> .

# Define Ontology
<http://example.org/finance> rdf:type owl:Ontology ;
    rdfs:comment "An ontology for financial market transactions and data analysis" .

### --- Classes ---
ex:StockTransaction rdf:type owl:Class ;
    rdfs:label "Stock Transaction" ;
    rdfs:comment "A stock trade or transaction event" .

ex:Company rdf:type owl:Class ;
    rdfs:label "Company" ;
    rdfs:comment "A publicly traded company" .

ex:AnalystRating rdf:type owl:Class ;
    rdfs:label "Analyst Rating" ;
    rdfs:comment "A rating provided by a financial analyst on a stock" .

ex:GoogleTrend rdf:type owl:Class ;
    rdfs:label "Google Trend" ;
    rdfs:comment "Google search trend related to a stock ticker" .

ex:NewsSentiment rdf:type owl:Class ;
    rdfs:label "News Sentiment" ;
    rdfs:comment "Sentiment analysis derived from news articles about a stock" .

ex:StockPrice rdf:type owl:Class ;
    rdfs:label "Stock Price" ;
    rdfs:comment "A historical record of stock price movements" .

ex:Insider rdf:type owl:Class ;
    rdfs:label "Insider" ;
    rdfs:comment "A person who has access to non-public information about a company" .

### --- Properties ---
ex:date rdf:type owl:DatatypeProperty ;
    rdfs:domain ex:StockTransaction ;
    rdfs:range xsd:date ;
    rdfs:label "Date of the transaction" .

ex:price rdf:type owl:DatatypeProperty ;
    rdfs:domain ex:StockTransaction ;
    rdfs:range xsd:decimal ;
    rdfs:label "Price of the stock" .

ex:hasStockPrice rdf:type owl:ObjectProperty ;
    rdfs:domain ex:Company ;
    rdfs:range ex:StockPrice ;
    rdfs:label "Links a company to stock price history" .

ex:hasSentimentScore rdf:type owl:DatatypeProperty ;
    rdfs:domain ex:NewsSentiment ;
    rdfs:range xsd:decimal ;
    rdfs:label "Sentiment score for a news article" .

ex:hasTrendScore rdf:type owl:DatatypeProperty ;
    rdfs:domain ex:GoogleTrend ;
    rdfs:range xsd:integer ;
    rdfs:label "Google search trend score" .

ex:hasAnalystRating rdf:type owl:ObjectProperty ;
    rdfs:domain ex:Company ;
    rdfs:range ex:AnalystRating ;
    rdfs:label "Links a company to analyst ratings" .

ex:name rdf:type owl:DatatypeProperty ;
    rdfs:domain ex:Insider ;
    rdfs:range xsd:string ;
    rdfs:label "Name of the insider" .

ex:ownsStock rdf:type owl:ObjectProperty ;
    rdfs:domain ex:Insider ;
    rdfs:range ex:Company ;
    rdfs:label "Links an insider to the stocks they own" .

# Link AAPL (Apple Inc.) to DBpedia & Wikidata
ex:AAPL owl:sameAs <http://dbpedia.org/resource/Apple_Inc.> .
ex:AAPL owl:sameAs wd:Q312 .

# Link other companies
ex:MSFT owl:sameAs <http://dbpedia.org/resource/Microsoft> .
ex:MSFT owl:sameAs wd:Q2283 .

ex:GOOGL owl:sameAs <http://dbpedia.org/resource/Google> .
ex:GOOGL owl:sameAs wd:Q95 .

